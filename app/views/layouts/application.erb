<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title><%= window_title %></title>
  <%= stylesheets %>
  <%= extra_head_content %>
</head>

<body class="<%= body_tags %>">

<div id="ab-wrapper">

  <div id="ab-masthead">
    <h1>Astrobase</h1>
    <nav>
      <%= render_navigation %>
    </nav>
  </div>

  <div id="ab-main">
    <%= yield %>
  </div>

</div>

<%= javascripts %>

<script>
(function(window, document, $, undefined) {
  $.domReady(function() {
    AB.init({ env: "<%= app_env %>" });
    <%= extra_javascript %>
  })
})(this, this.document, this.ender);
</script>

</body>
</html>
